{% extends 'baseBack.html.twig' %}


{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>NumTel</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Banned</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.numTel }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    {% if user.banned == 0  %}
                        <a href="{{ path('app_userBack_ban', {'id': user.id}) }}">Ban the user</a>
                    {% else %}
                        <a href="{{ path('app_userBack_ban', {'id': user.id}) }}">Unban the user</a>
                    {% endif %}
                </td>
                </td>

                <td>
                    <a href="{{ path('app_userBack_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_userBack_edit', {'id': user.id}) }}">edit</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_userBack_new') }}">Create new</a>
{% endblock %}
